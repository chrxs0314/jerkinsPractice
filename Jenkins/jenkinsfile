pipeline {
    agent any

    environment{
        JENKINS_USER_NAME = 'UserTest'
        JENKINS_USER_PASSWORD = 'mi_contraseña'
    }

    tools {
        maven "M3"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Preparar entorno') {
            steps {
                bat 'mvn clean'
            }
        }

        stage('Compilar proyecto') {
            steps {
                // Compila el proyecto, asegurándote de que la clase EnvironmentVariable también se compile
                bat 'mvn compile'
            }
        }

        stage('Ejecutar pruebas') {
            steps {
                bat 'mvn test -DsuiteXmlFile=suite.xml'
            }
        }

        stage('Generar reporte de Allure') {
            steps {
                bat 'mvn allure:report'
                archiveArtifacts artifacts: 'target/site/allure-maven-plugin/**', fingerprint: true
            }
        }

        stage('Comparar variables de entorno'){
            steps {
                script {
                    bat 'java -cp "target/classes;target/test-classes" pomProjectTAEAcademy.App'
                }
            }
        }

        stage('Recopilar resultados') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }
    }

    post {
        success {
            echo 'Las pruebas se ejecutaron con éxito.'
        }
        failure {
            echo 'La ejecución de las pruebas falló. Revisar los resultados.'
        }
        unstable {
            echo 'La ejecución de las pruebas es inestable. Algunas pruebas fallaron.'
        }
        always{
            allure([
            includeProperties: false,
            jdk:'',
            properties:[],
            reportBuildPolicy:'ALWAYS',
            results:[[path: 'target/allure-results']]
            ])
        }
    }
}